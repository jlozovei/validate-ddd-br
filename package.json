{
  "name": "validate-ddd-br",
  "version": "0.0.0-development",
  "description": "A nice JS package to validate brazilian phone number's area code (DDD).",
  "main": "dist/index.js",
  "scripts": {
    "build": "rollup -c",
    "format": "prettier \"{./,tests}/*.js\" --write",
    "test:dev": "jest",
    "test": "jest --coverage --watchAll=false",
    "semantic-release": "semantic-release"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jlozovei/validate-ddd-br.git"
  },
  "author": "Julio Lozovei <jlozovei@gmail.com> (https://jlozovei.dev)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/jlozovei/validate-ddd-br/issues"
  },
  "homepage": "https://github.com/jlozovei/validate-ddd-br#readme",
  "files": [
    "dist"
  ],
  "keywords": [
    "validation",
    "ddd",
    "phone validation",
    "brazilian area code"
  ],
  "devDependencies": {
    "eslint": "^7.3.1",
    "eslint-config-prettier": "^6.11.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.2.5",
    "jest": "^26.1.0",
    "prettier": "^2.0.5",
    "rollup-plugin-node-builtins": "^2.1.2",
    "semantic-release": "^17.1.1"
  },
  "dependencies": {
    "@babel/core": "^7.10.3",
    "@babel/preset-env": "^7.10.3",
    "@babel/register": "^7.10.3",
    "rollup": "^2.18.1"
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run format"
    }
  },
  "jest": {
    "collectCoverageFrom": [
      "*.js"
    ],
    "coverageReporters": [
      "json-summary",
      "text",
      "lcov"
    ],
    "coverageDirectory": "./coverage/"
  },
  "prettier": {
    "printWidth": 100,
    "useTabs": false,
    "tabWidth": 2,
    "semi": true,
    "singleQuote": true,
    "trailingComma": "none"
  },
  "babel": {
    "presets": [
      "@babel/preset-env"
    ]
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es6": true
    },
    "plugins": [
      "prettier"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:prettier/recommended"
    ],
    "parserOptions": {
      "ecmaVersion": 2016,
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "quotes": [
        "error",
        "single"
      ],
      "semi": [
        "error",
        "always"
      ],
      "prettier/prettier": "error"
    }
  }
}
